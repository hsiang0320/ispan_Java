package hw3;

import java.util.Scanner;

public class Rain {

	public static void main(String[] args) {// 5*12*12
		int year, season, month;
		double ans = 0;
		double[][][] rainRec = {
				{ { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 } },
				{ { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 } },
				{ { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 } },
				{ { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 } },
				{ { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 }, { 60.5, 50.2, 89.2 } } };
		Scanner scanner = new Scanner(System.in);
		System.out.print("請輸入all、year、season、month\n");
		String selectType = scanner.next();
		if (!selectType.equals("all") && !selectType.equals("year") && !selectType.equals("season")
				&& !selectType.equals("month")) {// 輸入錯誤判斷
			System.out.print("error");
			System.exit(0);
		} else if (selectType.equals("all")) {// all篩選
			for (int i = 0; i < rainRec.length; i++) {// 這裡做all
				for (int j = 0; i < rainRec[i].length; i++) {
					for (int z = 0; i < rainRec[i][j].length; i++) {
						ans=ans+rainRec[i][j][z];
					}
				}

			}
		} else {
			System.out.print("輸入一個正整數指定年/季/月\n");
			if (selectType.equals("year")) {
				year = scanner.nextInt();
			} else if (selectType.equals("season")) {
				season = scanner.nextInt();
			} else if (selectType.equals("month")) {
				month = scanner.nextInt();
			}
		}
	}

}
