package hw4;

public class Verifier {
	static void f1() {
		for (int i = 0; i < 4; i++) {
			System.out.print((int) (Math.random() * 10));
		}
		System.out.println();
	}

	static void f2() {
		boolean error = true;
		int[] check = new int[4];
		int n = 0;
		do {
			if (n == 0) {
				check[n] = (int) (Math.random() * 10);
				n++;
			} else {
				check[n] = (int) (Math.random() * 10);
				for (int i = 0; i < n; i++) {
					if (check[i] != check[n]) {
						error = false;
					} else {
						error = true;
					}
				}
				if (error == false) {
					n++;
				}
			}

		} while (n < 4);
		for (int i = 0; i < check.length; i++) {
			System.out.print(check[i]);
		}

	}

	public static void main(String[] args) {
		f1();// 第一題
		f2();
	}

}
