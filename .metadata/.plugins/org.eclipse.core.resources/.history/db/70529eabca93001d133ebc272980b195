package hw4;

public class Poker {

	static void deal() {
		boolean[][] check = new boolean[4][13];
		String[][] player_cards = new String[4][13];
		int random_poker_suits = 0;
		int random_poker_num = 0;
		int player_index = 0;
		int cards_index = 0;
		for (int i = 0; i < check.length; i++) {
			for (int j = 0; j < check[i].length; j++) {
				check[i][j] = false;
			}
		}

		// System.out.print("花色:" + poker_suits + " 點數:" + poker_num);
		for (int i = 0; i < player_cards.length; i++) {
			for (int j = 0; j < player_cards[i].length; j++) {
				do {
					random_poker_suits = (int) (Math.random() * 4);
					random_poker_num = (int) (Math.random() * 13);
				} while (check[random_poker_suits][random_poker_num] == true);
				check[random_poker_suits][random_poker_num] = true;
				switch (random_poker_suits) {// 花色判別+把牌存到player_card裡
				case 0:
					player_cards[player_index][cards_index] = "梅花";
					break;
				case 1:
					player_cards[player_index][cards_index] = "方塊";
					break;
				case 2:
					player_cards[player_index][cards_index] = "紅心";
					break;
				case 3:
					player_cards[player_index][cards_index] = "黑桃";
					break;
				}
				switch (random_poker_suits) {// 點數判別+把牌存到player_card裡
				case 0:
					player_cards[player_index][cards_index] += "A";
					break;
				case 10:
					player_cards[player_index][cards_index] += "J";
					break;
				case 11:
					player_cards[player_index][cards_index] += "Q";
					break;
				case 12:
					player_cards[player_index][cards_index] += "K";
					break;
				default:
					player_cards[player_index][cards_index] += random_poker_num;
				}

				if (player_index < 3) {
					player_index++;
				} else if (player_index == 3) {
					player_index = 0;
				}
				if (player_index == 0) {
					cards_index++;
				}

			}
		}
		for (int i = 0; i < player_cards.length; i++) {
			System.out.print("玩家:" + i + "手牌:");
			for (int j = 0; j < player_cards[i].length; j++) {
				System.out.print(player_cards[i][j] + " ");
			}
			System.out.println();
		}
		/*
		 * for (int i = 0; i < check.length; i++) { for (int j = 0; j < check[i].length;
		 * j++) { System.out.print(check[i][j]+" "); } System.out.println(); }
		 */
	}

	public static void main(String[] args) {
		deal();
	}

}
