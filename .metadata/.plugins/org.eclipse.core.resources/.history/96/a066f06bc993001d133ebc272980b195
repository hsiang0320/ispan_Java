package hw4;

public class Poker {

	static void deal() {
		int[][] check = new int[4][13];
		String[][] player_cards = new String[4][13];
		int random_poker_suits = 0;
		int random_poker_num = 0;
		int player_index =0;
		int cards_index=0;
		for (int i = 0; i < check.length; i++) {
			for (int j = 0; j < check[i].length; j++) {
				check[i][j] = 0;
			}
		}

		//System.out.print("花色:" + poker_suits + " 點數:" + poker_num);
		for (int i = 0; i < player_cards.length; i++) {
			for (int j = 0; j < player_cards[i].length; j++) {
				do {
					random_poker_suits = (int) (Math.random() * 4);
					random_poker_num = (int) (Math.random() * 13);
				} while (check[random_poker_suits][random_poker_num] == 1);
				check[random_poker_suits][random_poker_num] = 1;
				switch (random_poker_suits) {
				case 0:
					player_cards[player_index][cards_index]="梅花";
				case 1:
					player_cards[player_index][cards_index]="方塊";
				case 2:
					player_cards[player_index][cards_index]="紅心";
				case 3:
					player_cards[player_index][cards_index]="黑桃";
				}
			}
		}
		/*for (int i = 0; i < check.length; i++) {   
			for (int j = 0; j < check[i].length; j++) {
				System.out.print(check[i][j]+" ");
			}
			System.out.println();
		}*/
	}

	public static void main(String[] args) {
		deal();
	}

}
