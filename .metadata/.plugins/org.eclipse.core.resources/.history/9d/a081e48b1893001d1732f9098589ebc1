package hw4;

public class Verifier {
	static void f1() {
		for (int i = 0; i < 4; i++) {
			System.out.print((int) (Math.random() * 10));
		}
		System.out.println();
	}

	static void f2() {
		boolean error = true;
		int[] check = new int[4];
		int n = 0;
		do {
			if (n == 0) {
				check[n] = (int) (Math.random() * 10);
				n++;
			} else {
				check[n] = (int) (Math.random() * 10);
				for (int i = 0; i < n; i++) {
					if (check[i] != check[n]) {
						error = false;
					} else {
						error = true;
						break;
					}
				}
				if (error == false) {
					n++;
				}
			}

		} while (n < 4);
		for (int i = 0; i < check.length; i++) {
			System.out.print(check[i]);
		}
		System.out.println();
	}

	static void f3() {
		char[] ans = new char[6];
		int index=0;
		int e = 0, n = 0;
		int ascii = 60;
		while (n + e < 6 || n == 0 || e == 0) {
			ascii = 60;
			while (ascii >= 58 && ascii <= 64) {
				ascii = (int) (Math.random() * (90 - 48 + 1) + 48);
			}		
			if (ascii >= 48 && ascii <= 57) {
				n++;
			} else {
				e++;
			}
			if() {
				ans[index]=(char)ascii;
			}
		}

	
		// System.out.print(e);
		// System.out.print(n);
		//System.out.print(ascii);
		System.out.print(ans);
	}

	public static void main(String[] args) {
		f1();// 第一題
		f2();// 第二題
		f3();
		// System.out.print((char)66);
	}

}
