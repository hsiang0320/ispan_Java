package hw1;

public class Refund {

	public static void main(String[] args) {
		int payableAmount = 1000;
		int paidAmount = 3500;
		int dif = 0;// 差額
		if (payableAmount == paidAmount) {
			System.out.println("不必找錢");
		} else if (paidAmount < payableAmount) {
			System.out.println("金額不足");
		} else if (paidAmount > payableAmount) {
			dif = paidAmount - payableAmount;
			if (dif > 1000) {
				System.out.println(dif / 1000 + "張1000元紙鈔");
				dif=dif-(dif/1000)*1000;
				//System.out.println(dif);
			}else if(dif > 500) {
				System.out.println(dif / 500 + "張500元紙鈔");
				dif=dif-(dif/500)*500;
			}
		}

	}

}
